{
  // Run the app in a production environment. The default value is "development".
  "environment": "production",
  // Run Passenger on the given port. In this example, we use port 80, the standard HTTP port.
  "ssl": true,
  "port": 443,
  "ssl_certificate": "/etc/ssl/private/cert.pem",
  "ssl_certificate_key": "/etc/ssl/private/cert.key",
  "engine": "nginx",
  // Tell Passenger to daemonize into the background.
  "daemonize": true,
  // Tell Passenger to run the app as the given user. Only has effect if Passenger was started with root privileges.
  "user": "www-data"
}

